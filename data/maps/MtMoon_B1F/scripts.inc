MtMoon_B1F_MapScripts::
	map_script MAP_SCRIPT_ON_TRANSITION, MtMoon_1F_OnTransition
	.byte 0

MtMoon_1F_OnTransition::
	call_if_unset FLAG_DAILY_MT_MOON_MUSHROOMS, MtMoon_1F_ResetMushrooms
	end

MtMoon_1F_ResetMushrooms::
	clearflag FLAG_HIDDEN_ITEM_MT_MOON_B1F_TINY_MUSHROOM
	clearflag FLAG_HIDDEN_ITEM_MT_MOON_B1F_TINY_MUSHROOM_2
	clearflag FLAG_HIDDEN_ITEM_MT_MOON_B1F_TINY_MUSHROOM_3
	clearflag FLAG_HIDDEN_ITEM_MT_MOON_B1F_BIG_MUSHROOM
	clearflag FLAG_HIDDEN_ITEM_MT_MOON_B1F_BIG_MUSHROOM_2
	clearflag FLAG_HIDDEN_ITEM_MT_MOON_B1F_BIG_MUSHROOM_3
	setflag FLAG_DAILY_MT_MOON_MUSHROOMS
	return
